<p>
    Clan: <span class="icon-{{ card.clan.value }}"></span> {{ card.clan.value | trans({}, 'clans') }}
</p>
{% if card.cost is not null %}
<p>
    Cost: {{ card.cost }}
</p>
{% endif %}
<p>
    Type: {{ card.type.value | trans({}, 'types') }}
    {% if card.traits | length > 0 %}
        &mdash; {{ card.formatTraits() }}
    {% endif %}
</p>
{% if card.type.value == 'unit' %}
    <p>
        Attack: {{ card.attack }} &ndash;
        Armor: {{ card.armor }} &ndash;
        Health: {{ card.health }} {{ card.citizenToken  }}
    </p>
{% endif %}
<hr>
