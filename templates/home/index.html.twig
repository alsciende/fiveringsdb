{% extends 'base.html.twig' %}

{% block title %}SovereignDB - Card Database for Sovereign: Fall of Wormwood{% endblock %}

{% block body %}
    <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4" src="{{ asset('images/talent.png') }}" alt="" width="300" height="300">
        <h1 class="display-5 fw-bold text-body-emphasis">SovereignDB</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">Quickly search for cards of the game<br>Sovereign: Fall of Wormwood</p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                {{ render(controller('App\\Controller\\SearchController::form')) }}
            </div>
            <p class="lead my-4 mt-5">or browse the cards and explore the game!
            </p>
            <div class="btn-group">
                <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                    Factions
                </button>
                <ul class="dropdown-menu">
                    {% for id,name in factions.all %}
                        <li><a class="dropdown-item" href="{{ path('app_faction', {faction:id}) }}">{{ name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false">
                    Sets
                </button>
                <ul class="dropdown-menu">
                    {% for id,name in packs.all %}
                        <li><a class="dropdown-item" href="{{ path('app_pack', {pack:id}) }}">{{ name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
